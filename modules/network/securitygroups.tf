resource "aws_security_group" "db" {
  name   = "${var.project}-db"
  vpc_id = aws_vpc.this.id

  ingress {
    from_port       = 3306
    to_port         = 3306
    protocol        = "tcp"
    security_groups = [aws_security_group.vpc_traffic.id]
  }
  tags = merge(
    var.tags,
    {
      Name = "${var.project}-db"
  })
}

